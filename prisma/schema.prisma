generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id                      String                   @id @default(cuid())
  username                String                   @unique
  password                String
  caregiver               Caregiver?
  adultHomeRepresentative AdultHomeRepresentative?
  roles                   UserRole[]
}

model Caregiver {
  id          String   @id @default(cuid())
  firstName   String
  lastName    String
  email       String   @unique
  dateOfBirth DateTime
  gender      String
  phoneNumber String
  city        String
  state       String
  street      String
  zipcode     String
  userId      String   @unique
  user        User     @relation(fields: [userId], references: [id])
}

model AdultHomeRepresentative {
  id          String    @id @default(cuid())
  firstName   String
  lastName    String
  email       String    @unique
  phoneNumber String
  jobTitle    String
  userId      String    @unique
  adultHomeId String
  user        User      @relation(fields: [userId], references: [id])
  adultHome   AdultHome @relation(fields: [adultHomeId], references: [id])
}

model AdultHome {
  id      String                    @id @default(cuid())
  name    String
  email   String                    @unique
  phone   String
  city    String
  state   String
  street  String
  zipcode String
  website String?
  reps    AdultHomeRepresentative[]
}

model Role {
  id    String     @id @default(cuid())
  name  String     @unique
  users UserRole[]
}

model UserRole {
  userId String
  roleId String
  user   User   @relation(fields: [userId], references: [id])
  role   Role   @relation(fields: [roleId], references: [id])

  @@id([userId, roleId])
}
